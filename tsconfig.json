{
  "compilerOptions": {
    "target": "es5",
    "declarationDir": "./dist",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "stripInternal": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "suppressImplicitAnyIndexErrors": true
  }
}
